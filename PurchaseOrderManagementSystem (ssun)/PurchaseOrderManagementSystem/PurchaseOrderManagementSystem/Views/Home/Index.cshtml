@{
    ViewBag.Title = "Home - Purchase Order Management System";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<!-- Hero Section with Animation -->
<div class="hero-section" style="background: linear-gradient(135deg, #3a7bd5 0%, #00d2ff 100%); padding: 80px 20px; text-align: center; color: #fff; position: relative; overflow: hidden;">
    <div style="max-width: 1200px; margin: 0 auto; position: relative; z-index: 2;">
        <h1 style="font-size: 3.2em; margin-bottom: 20px; font-weight: 700; animation: fadeInDown 1s ease;">Streamline Your Procurement Workflow</h1>
        <p style="font-size: 1.4em; max-width: 800px; margin: 0 auto 30px; line-height: 1.6; animation: fadeIn 1.5s ease;">
            Transform your purchase order process with intelligent automation, real-time tracking, and powerful analytics - all in one centralized platform.
        </p>
        <div style="margin-top: 40px; display: flex; justify-content: center; gap: 20px; flex-wrap: wrap; animation: fadeInUp 1s ease;">
            <a href="@Url.Action("Create", "PO")" class="btn btn-primary" style="padding: 16px 32px; font-size: 1.1em; border: none; border-radius: 50px; cursor: pointer; text-decoration: none; background-color: #fff; color: #3a7bd5; font-weight: 600; box-shadow: 0 4px 15px rgba(0,0,0,0.1); transition: all 0.3s;">
                Create New PO <i class="fa fa-plus-circle" style="margin-left: 8px;"></i>
            </a>
            <a href="@Url.Action("Dashboard", "Home")" class="btn btn-outline-light" style="padding: 16px 32px; font-size: 1.1em; border: 2px solid #fff; border-radius: 50px; cursor: pointer; text-decoration: none; background-color: transparent; color: #fff; font-weight: 600; transition: all 0.3s;">
                Explore Dashboard <i class="fa fa-arrow-right" style="margin-left: 8px;"></i>
            </a>
        </div>
    </div>
    <div style="position: absolute; bottom: -50px; right: -50px; width: 300px; height: 300px; background: rgba(255,255,255,0.1); border-radius: 50%;"></div>
    <div style="position: absolute; top: -100px; left: -100px; width: 400px; height: 400px; background: rgba(255,255,255,0.05); border-radius: 50%;"></div>
</div>

<!-- Value Proposition Section -->
<section style="padding: 80px 20px; background-color: #f9fbfd;">
    <div style="max-width: 1200px; margin: 0 auto;">
        <div style="text-align: center; margin-bottom: 60px;">
            <h2 style="font-size: 2.5em; color: #2c3e50; margin-bottom: 15px;">Why Choose Our PO System?</h2>
            <p style="font-size: 1.2em; color: #7f8c8d; max-width: 700px; margin: 0 auto;">Experience procurement efficiency like never before with these powerful benefits</p>
        </div>

        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 30px;">
            <div style="background: #fff; padding: 30px; border-radius: 10px; box-shadow: 0 5px 15px rgba(0,0,0,0.03); transition: transform 0.3s ease;">
                <div style="width: 60px; height: 60px; background: #e3f2fd; border-radius: 12px; display: flex; align-items: center; justify-content: center; margin-bottom: 20px;">
                    <i class="fa fa-bolt" style="font-size: 24px; color: #2196f3;"></i>
                </div>
                <h3 style="color: #2c3e50; margin-bottom: 15px;">90% Faster Approvals</h3>
                <p style="color: #7f8c8d; line-height: 1.6;">Automated routing and approval workflows reduce processing time from days to hours.</p>
            </div>

            <div style="background: #fff; padding: 30px; border-radius: 10px; box-shadow: 0 5px 15px rgba(0,0,0,0.03); transition: transform 0.3s ease;">
                <div style="width: 60px; height: 60px; background: #e8f5e9; border-radius: 12px; display: flex; align-items: center; justify-content: center; margin-bottom: 20px;">
                    <i class="fa fa-chart-line" style="font-size: 24px; color: #4caf50;"></i>
                </div>
                <h3 style="color: #2c3e50; margin-bottom: 15px;">Real-Time Spend Analytics</h3>
                <p style="color: #7f8c8d; line-height: 1.6;">Gain instant visibility into procurement spending across departments and suppliers.</p>
            </div>

            <div style="background: #fff; padding: 30px; border-radius: 10px; box-shadow: 0 5px 15px rgba(0,0,0,0.03); transition: transform 0.3s ease;">
                <div style="width: 60px; height: 60px; background: #f3e5f5; border-radius: 12px; display: flex; align-items: center; justify-content: center; margin-bottom: 20px;">
                    <i class="fa fa-shield-alt" style="font-size: 24px; color: #9c27b0;"></i>
                </div>
                <h3 style="color: #2c3e50; margin-bottom: 15px;">Compliance Made Simple</h3>
                <p style="color: #7f8c8d; line-height: 1.6;">Built-in controls ensure every PO meets your company policies and audit requirements.</p>
            </div>
        </div>
    </div>
</section>

<!-- How It Works Section -->
<section style="padding: 80px 20px; background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);">
    <div style="max-width: 1200px; margin: 0 auto;">
        <div style="text-align: center; margin-bottom: 60px;">
            <h2 style="font-size: 2.5em; color: #2c3e50; margin-bottom: 15px;">Simple Yet Powerful Workflow</h2>
            <p style="font-size: 1.2em; color: #7f8c8d; max-width: 700px; margin: 0 auto;">From creation to payment - all in one seamless process</p>
        </div>

        <div style="display: flex; flex-wrap: wrap; justify-content: space-between; position: relative;">
            <div style="width: 100%; height: 3px; background: rgba(0,0,0,0.1); position: absolute; top: 40px; left: 0; z-index: 1;"></div>

            <div style="flex: 0 0 calc(20% - 20px); text-align: center; position: relative; z-index: 2; margin-bottom: 40px;">
                <div style="width: 80px; height: 80px; background: #fff; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 20px; box-shadow: 0 5px 15px rgba(0,0,0,0.1);">
                    <i class="fa fa-file-alt" style="font-size: 30px; color: #3a7bd5;"></i>
                </div>
                <h4 style="color: #2c3e50;">PO Creation</h4>
            </div>

            <div style="flex: 0 0 calc(20% - 20px); text-align: center; position: relative; z-index: 2; margin-bottom: 40px;">
                <div style="width: 80px; height: 80px; background: #fff; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 20px; box-shadow: 0 5px 15px rgba(0,0,0,0.1);">
                    <i class="fa fa-user-check" style="font-size: 30px; color: #3a7bd5;"></i>
                </div>
                <h4 style="color: #2c3e50;">Approval</h4>
            </div>

            <div style="flex: 0 0 calc(20% - 20px); text-align: center; position: relative; z-index: 2; margin-bottom: 40px;">
                <div style="width: 80px; height: 80px; background: #fff; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 20px; box-shadow: 0 5px 15px rgba(0,0,0,0.1);">
                    <i class="fa fa-truck" style="font-size: 30px; color: #3a7bd5;"></i>
                </div>
                <h4 style="color: #2c3e50;">Fulfillment</h4>
            </div>

            <div style="flex: 0 0 calc(20% - 20px); text-align: center; position: relative; z-index: 2; margin-bottom: 40px;">
                <div style="width: 80px; height: 80px; background: #fff; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 20px; box-shadow: 0 5px 15px rgba(0,0,0,0.1);">
                    <i class="fa fa-clipboard-check" style="font-size: 30px; color: #3a7bd5;"></i>
                </div>
                <h4 style="color: #2c3e50;">Receiving</h4>
            </div>

            <div style="flex: 0 0 calc(20% - 20px); text-align: center; position: relative; z-index: 2; margin-bottom: 40px;">
                <div style="width: 80px; height: 80px; background: #fff; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 20px; box-shadow: 0 5px 15px rgba(0,0,0,0.1);">
                    <i class="fa fa-receipt" style="font-size: 30px; color: #3a7bd5;"></i>
                </div>
                <h4 style="color: #2c3e50;">Invoice</h4>
            </div>
        </div>
    </div>
</section>

<!-- Testimonial Section -->
<section style="padding: 80px 20px; background-color: #fff;">
    <div style="max-width: 1000px; margin: 0 auto; text-align: center;">
        <div style="width: 80px; height: 80px; background: #f5f7fa; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 30px;">
            <i class="fa fa-quote-left" style="font-size: 30px; color: #3a7bd5;"></i>
        </div>
        <p style="font-size: 1.4em; line-height: 1.8; color: #555; margin-bottom: 30px; font-style: italic;">
            "Since implementing this PO system, our procurement cycle time has been reduced by 65%. The intuitive interface and powerful reporting tools have transformed how we manage purchases across all departments."
        </p>
        <div style="display: flex; align-items: center; justify-content: center;">
            <div style="width: 60px; height: 60px; border-radius: 50%; background: #eee; margin-right: 15px;"></div>
            <div style="text-align: left;">
                <h4 style="margin: 0; color: #2c3e50;">Sarah Johnson</h4>
                <p style="margin: 0; color: #7f8c8d;">Procurement Director, Acme Corp</p>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section style="padding: 80px 20px; background: linear-gradient(135deg, #3a7bd5 0%, #00d2ff 100%); text-align: center; color: #fff;">
    <div style="max-width: 800px; margin: 0 auto;">
        <h2 style="font-size: 2.5em; margin-bottom: 20px;">Ready to Transform Your Procurement Process?</h2>
        <p style="font-size: 1.2em; margin-bottom: 40px; opacity: 0.9;">Join hundreds of companies who have streamlined their purchase order management</p>
        <div style="display: flex; justify-content: center; gap: 20px; flex-wrap: wrap;">
            <a href="@Url.Action("Dashboard", "Home")" class="btn btn-primary" style="padding: 16px 40px; font-size: 1.1em; border: none; border-radius: 50px; cursor: pointer; text-decoration: none; background-color: #fff; color: #3a7bd5; font-weight: 600; box-shadow: 0 4px 15px rgba(0,0,0,0.1); transition: all 0.3s;">
                Get Started Now
            </a>
            <a href="#" class="btn btn-outline-light" style="padding: 16px 40px; font-size: 1.1em; border: 2px solid #fff; border-radius: 50px; cursor: pointer; text-decoration: none; background-color: transparent; color: #fff; font-weight: 600; transition: all 0.3s;">
                Request Demo
            </a>
        </div>
    </div>
</section>

<style>
    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .hero-section .btn-primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 7px 20px rgba(0,0,0,0.15);
    }

    .hero-section .btn-outline-light:hover {
        background-color: rgba(255,255,255,0.1);
    }

    section div[style*="box-shadow"]:hover {
        transform: translateY(-5px);
    }
</style>